{
  "name": "YouTube Screenshot Extension",
  "description": "YouTubeの動画プレイヤーにスクリーンショット機能を追加するブラウザ拡張機能",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "license": "MIT",
  "author": "TTTu-72",
  "repository": {
    "type": "git",
    "url": "https://github.com/TTTu-72/chrome-extension-youtube-screenshot.git"
  },
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css}",
    "format:check": "prettier --check src/**/*.{ts,tsx,css}",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@solid-primitives/scheduled": "^1.5.2",
    "solid-js": "^1.9.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@wxt-dev/auto-icons": "^1.1.0",
    "@wxt-dev/module-solid": "^1.1.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-solid": "^0.14.5",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "wxt": "^0.20.6"
  }
}
